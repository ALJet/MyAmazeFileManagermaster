<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <!--两个之定义View-->
    
    <indi.aljet.myamazefilemanager_master.ui.views.ThemedImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fingerprint_grey600_36dp"/>

    <indi.aljet.myamazefilemanager_master.ui.views.ThemedImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crypt_fingerprint_authenticate"
        android:layout_marginTop="@dimen/material_generic"/>


    <Button
        android:id="@+id/button_decrypt_fingerprint_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_generic_medium"
        android:text="@string/cancel"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="@dimen/material_generic"/>


</LinearLayout>